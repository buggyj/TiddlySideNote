{
  "name": "Tiddly Side Note",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Provides notes in the side panel",
  	"content_scripts" : [ {
		"js" : [		
			"contentScript.js"
		],
      "matches" : [
        "http://*/*",
        "file:///*",
        "https://*/*"
      ],
		"run_at" : "document_start"
	} ],
  
  
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "48": "images/tsn48.png",
    "16": "images/tsn16.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs"
  ]
}
